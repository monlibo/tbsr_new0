{% extends 'base.html.twig' %}

{% block title %}Reforme index
{% endblock %}

{% block body %}
	{{ parent() }}

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="border-bottom title-part-padding">
					<h4 class="card-title mb-0">Liste des reformes</h4>
				</div>
				<div class="card-body">
					<div>
						<a class="btn btn-flat btn-primary mb-3" href="{{ path('app_reforme_new') }}">
							<i class="fa fa-plus"></i>
							Ajouter
						</a>
					</div>
					<div class="table-responsive">
						<table id="zero_config" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>Libelle</th>
									<th>Description</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for reforme in reformes %}
									<tr>
										<td>{{ reforme.libelle }}</td>
										<td>{{ reforme.description }}</td>
										<td>
											<a class="btn btn-primary btn-xs" href="{{ path('app_reforme_show', {'id': reforme.id}) }}">Details</a>
											<a class="btn btn-warning btn-xs" href="{{ path('app_reforme_edit', {'id': reforme.id}) }}">Modifier</a>
											{{ include('reforme/_delete_form.html.twig') }}
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
