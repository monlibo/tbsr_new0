{{ form_start(form) }}
<div class="row">

	<div class="col-md-6">
		<div class="form-floating mb-3">
			{{ form_widget(form.code) }}
			{{ form_label(form.code) }}
		</div>

	</div>
	<div class="col-md-6">
		<div class="form-floating mb-3">
			{{ form_widget(form.libelle) }}
			{{ form_label(form.libelle) }}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="form-floating mb-3">
			{{ form_widget(form.telephone) }}
			{{ form_label(form.telephone) }}
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-floating mb-3">
			{{ form_widget(form.email) }}
			{{ form_label(form.email) }}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="form-floating mb-3">
			{{ form_widget(form.adresse) }}
			{{ form_label(form.adresse) }}
		</div>
	</div>
</div>

<div class="col-12">
	<div class=" mt-3">
		<div class="ms-auto mt-3 mt-md-0">
			<button type="submit" class="btn btn-success font-weight-medium rounded-pill px-4">
				<div class="d-flex align-items-center">
					<i data-feather="database" class="feather-sm fill-white me-2"></i>
					{{ button_label|default('Enregistrer') }}
				</div>
			</button>
			<a href="{{ path('app_bailleur_index') }}" class="btn btn-danger font-weight-medium rounded-pill px-4">
				<div class="d-flex align-items-center">
					<i data-feather="list" class="feather-sm fill-white me-2"></i>
					Fermer
				</div>
			</a>
		</div>
	</div>
	{{ form_end(form) }}
