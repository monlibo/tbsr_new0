{% extends 'base.html.twig' %}

{% block title %}programme{% endblock %}

{% block body %}
    <h1>Détail du programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>NumActivite</th>
                <td>{{ activite.numActivite }}</td>
            </tr>
            <tr>
                <th>LibelleActivite</th>
                <td>{{ activite.libelleActivite }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ activite.created ? activite.created|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ activite.auteur }}</td>
            </tr>
            <tr>
                <th>Last_updated</th>
                <td>{{ activite.lastUpdated ? activite.lastUpdated|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_updated_auteur</th>
                <td>{{ activite.lastUpdatedAuteur }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_programme_index') }}">Retour à la liste</a>

    <a href="{{ path('app_programme_edit', {'id': activite.id}) }}">Modifier</a>

    {{ include('programme/_delete_form.html.twig') }}
{% endblock %}
