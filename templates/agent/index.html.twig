{% extends 'base.html.twig' %}

{% block title %}Agent index
{% endblock %}

{% block body %}
	{{ parent() }}
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="border-bottom title-part-padding">
					<h4 class="card-title mb-0">Liste des agents</h4>
				</div>
				
				<div class="card-body">
					<div>
						<a class="btn btn-flat btn-primary mb-3" href="{{ path('app_agent_new') }}">
							<i class="fa fa-plus"></i>
							Ajouter
						</a>
					</div>
					<div class="table-responsive" >
						<table id="zero_config" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>Identifiant_agent</th>
									<th>Matricule</th>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Email</th>
									<th>Telephone</th>
									<th>Nomdejeunefille</th>
									<th>Sexe</th>
									<th>Date_naissance</th>
									<th>Lieu_naissance</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for agent in agents %}
									<tr>
										<td>{{ agent.identifiantAgent }}</td>
										<td>{{ agent.matricule }}</td>
										<td>{{ agent.nom }}</td>
										<td>{{ agent.prenom }}</td>
										<td>{{ agent.email }}</td>
										<td>{{ agent.telephone }}</td>
										<td>{{ agent.nomdejeunefille }}</td>
										<td>{{ agent.sexe }}</td>
										<td>{{ agent.dateNaissance ? agent.dateNaissance|date('d-m-Y') : '' }}</td>
										<td>{{ agent.lieuNaissance }}</td>
										<td>
											<a href="{{ path('app_agent_show', {'identifiant_agent': agent.identifiantAgent}) }}">DÃ©tail</a>
											<a href="{{ path('app_agent_edit', {'identifiant_agent': agent.identifiantAgent}) }}">Modifier</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
