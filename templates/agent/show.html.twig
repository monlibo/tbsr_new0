{% extends 'base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <h1>Détails de l'agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant_agent</th>
                <td>{{ agent.identifiantAgent }}</td>
            </tr>
            <tr>
                <th>NPI</th>
                <td>{{ agent.NPI }}</td>
            </tr>
            <tr>
                <th>IFU</th>
                <td>{{ agent.IFU }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ agent.matricule }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ agent.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ agent.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ agent.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ agent.telephone }}</td>
            </tr>
            <tr>
                <th>Nomdejeunefille</th>
                <td>{{ agent.nomdejeunefille }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ agent.sexe }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ agent.dateNaissance ? agent.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu_naissance</th>
                <td>{{ agent.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ agent.fullname }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ agent.created ? agent.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ agent.auteur }}</td>
            </tr>
            <tr>
                <th>Last_updated</th>
                <td>{{ agent.lastUpdated ? agent.lastUpdated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_updated_auteur</th>
                <td>{{ agent.lastUpdatedAuteur }}</td>
            </tr>
            <tr>
                <th>Supprimer</th>
                <td>{{ agent.supprimer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Supprimer_date</th>
                <td>{{ agent.supprimerDate ? agent.supprimerDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Supprimer_auteur</th>
                <td>{{ agent.supprimerAuteur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_agent_index') }}">Retour à la liste</a>

    <a href="{{ path('app_agent_edit', {'identifiant_agent': agent.identifiantAgent}) }}">Modifier</a>

    {{ include('agent/_delete_form.html.twig') }}
{% endblock %}
