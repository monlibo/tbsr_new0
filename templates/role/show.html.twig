{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
    <h1>Détail du Rôle</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-danger"  style="background-color: green; color: #dbeafe" >
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ role.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_role_index') }}">Retour à la liste</a>

    <a href="{{ path('app_role_edit', {'id': role.id}) }}">Modifier</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
