{% extends 'base.html.twig' %}

{% block title %}CategorieDocument{% endblock %}

{% block body %}
    <h1>Details sur la catégorie</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success"  style=" color: #008000" >
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ categorieDocument.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorieDocument.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_document_index') }}">Retour à la liste</a>

    <a href="{{ path('app_categorie_document_edit', {'id': categorieDocument.id}) }}">Modifier</a>

    {{ include('categorie_document/_delete_form.html.twig') }}
{% endblock %}
